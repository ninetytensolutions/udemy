<h1 align="center">Listing all Bookings</h1>

<div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
            <%= link_to "Create a new Booking", new_ninety_ten_booking_path, class: "btn btn-xs btn-success" %>
        </div>
</div>

<% @ninety_ten_bookings.each do |ninety_ten_booking| %>
    <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
            <div class="ninety_ten_booking-title">
               [ <%= link_to ninety_ten_booking.firstName, ninety_ten_booking_path(ninety_ten_booking) %> <%= link_to ninety_ten_booking.lastName, ninety_ten_booking_path(ninety_ten_booking) %> ]
            </div>
            <div class="ninety_ten_booking-body">
                Date: <%= ninety_ten_booking.date  %><br>
                Time: <%= ninety_ten_booking.time.strftime("%H:%M")  %><br>
                Guests:<%= ninety_ten_booking.noOfGuests  %><br>
                Status: <%= ninety_ten_booking.status  %>
            </div>
            <div class="ninety_ten_booking-actions">
                <%= link_to "Edit this ninety_ten_booking", edit_ninety_ten_booking_path(ninety_ten_booking), class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this ninety_ten_booking", ninety_ten_booking_path(ninety_ten_booking), method: :delete,
                                                                                    data: {confirm: "Are you sure you want to delete this Booking?"}, 
                                                                                    class: "btn btn-xs btn-danger" %>
            </div>
        </div>
    </div>
<% end %>
    
